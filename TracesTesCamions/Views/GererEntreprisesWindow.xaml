<Window x:Class="TracesTesCamions.Views.GererEntreprisesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerer entreprises" Height="350" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Entreprises de maintenance" FontWeight="Bold" FontSize="16"/>
        <ListBox x:Name="ListEntreprises" DisplayMemberPath="Nom" Grid.Row="1" Margin="0,10" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2">
            <Button Content="Ajouter" Click="Ajouter_Click" Width="75"/>
            <Button Content="Modifier" Click="Modifier_Click" Width="75"/>
            <Button Content="Supprimer" Click="Supprimer_Click" Width="75"/>
        </StackPanel>
    </Grid>
</Window>
